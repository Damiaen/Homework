<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Week5"
             x:Class="Week5.MainPage"
             BackgroundColor="DarkGray">

    <StackLayout Margin="16" VerticalOptions="Center">
        <Entry x:Name="IpEntry" Placeholder="Voer IP in"/>
        <Slider x:Name="Interval" ValueChanged="Interval_ValueChanged" Maximum="100"/>
        <Label x:Name="DisplayInterval" Text="0" FontSize="64" HorizontalOptions="Center"/>
        <Button x:Name="SendInterval" Text="Updaten" Clicked="SendInterval_Clicked"/>
    </StackLayout>

</ContentPage>
